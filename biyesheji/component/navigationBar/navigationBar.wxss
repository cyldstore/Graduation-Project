.container {
  width: 750rpx;
  height: 75px;
  background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  position: fixed;
  top: 0px;
  z-index: 1000;
}

.container .left {
  position: absolute;
  left: 4px;
  bottom: 4px;
}

.container .left .icon {
  width: 60px;
  height: 32px;
  background-color: #fff;
  display: flex;
  border-radius: 30px;
}

.container text {
  position: absolute;
  left: 50%;
  bottom: 9px;
  transform: translateX(-50%);
  font-size: 18px;
}

.box {
  width: 750rpx;
  height: 75px;
}
