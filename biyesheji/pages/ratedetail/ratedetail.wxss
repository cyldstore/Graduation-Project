page {
  padding-bottom: 10px;
}

.rate {
  width: 95%;
  margin: 10px auto;
  border-radius: 20px;
  box-shadow: 5px 5px 5px #ccc;
  overflow: hidden;
}

.rate .title {
  padding: 10px;
  border-bottom: 1px dashed #000;
  font-size: 20px;
  font-weight: 700;
  letter-spacing: 1px;
  text-align: center;
}

.rate .title .time {
  font-size: 16px;
  font-weight: normal;
}

.rate .food {
  padding: 10px;
  letter-spacing: 1px;
  border-bottom: 1px dashed #000;
}

.rate .food .img {
  display: flex;
  align-items: center;
  font-size: 18px;
}

.rate .food .img .image {
  width: 60px;
  height: 60px;
  overflow: hidden;
  border-radius: 10px;
  margin-right: 10px;
}

.rate .food .img .image image {
  width: 100%;
  height: 100%;
}

.rate .food .img .info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.rate .food .img .info .name {
  font-size: 20px;
  color: red;
}

.rate .food .img .info .category {
  font-size: 14px;
}

.rate .food .img .info .category view {
  border: 1px solid gold;
  min-width: 3em;
  display: inline-block;
  text-align: center;
  border-radius: 50px;
  padding: 0 2px;
  margin-right: 5px;
}

.rate .food .food-rate {
  margin-top: 10px;
}

.rate .food .food-rate .taste {
  display: flex;
  align-items: center;
}

.rate .food .food-rate .taste .rate-title {
  margin-right: 20px;
  padding-top: 10px;
}

.rate .food .food-rate .taste .rate-score {
  margin-left: 20px;
  padding-top: 10px;
  color: gold;
}

.rate .food .text {
  margin-top: 10px;
  text-align: justify;
}

.rate .food .uploaderImg {
  display: flex;
  flex-wrap: wrap;
  margin-top: 5px;
}

.rate .food .uploaderImg .uploaderImg-item {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  margin-left: 5px;
  margin-bottom: 10px;
  border-radius: 10px;
  position: relative;
}

.rate .food .uploaderImg .uploaderImg-item image {
  width: 100%;
  height: 100%;
}

.rate .food .uploaderImg .uploaderImg-item:last-child {
  margin-right: 0;
  margin-bottom: 0;
}
