.chefInfo {
  width: 90%;
  margin: 10px auto;
  box-shadow: 10px 10px 10px #ccc;
}

.chefInfo .info {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}

.chefInfo .info view {
  box-sizing: border-box;
  width: 50%;
  padding-left: 15%;
  margin-bottom: 10px;
}

.chefInfo .desc {
  width: 90%;
  padding: 10px;
  text-align: justify;
  text-indent: 2em;
  margin: 0 auto;
  border: 1px dashed black;
}
