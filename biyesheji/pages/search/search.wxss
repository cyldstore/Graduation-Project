@charset "UTF-8";
.search-list {
  margin-top: 20rpx;
}

.search-item {
  display: flex;
  padding: 30rpx;
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-item-left {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.search-item-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.search-item-right {
  flex: 1;
  margin-left: 10px;
}

.search-item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-item-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.search-item-category {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-item-description {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* 指定显示文本的行数 */
  overflow: hidden;
  /* 超出隐藏 */
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
}

.highlight {
  color: #f60;
  font-weight: bold;
}
