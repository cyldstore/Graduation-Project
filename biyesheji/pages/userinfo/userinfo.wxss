.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  margin: 10px auto;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.info {
  width: 95%;
  margin: 20px auto;
  border-radius: 20px;
  box-shadow: 10px 10px 10px #ccc;
  overflow: hidden;
}

.info text {
  font-size: 18px;
}

.info .block {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px dashed #ccc;
}

.info .block .input {
  display: flex;
  align-items: center;
}

.info .block .input input {
  text-align: right;
}

button {
  width: 80%;
  margin: 10px auto;
}
