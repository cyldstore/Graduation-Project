@charset "UTF-8";
.order {
  width: 95%;
  height: 150px;
  overflow: hidden;
  margin: 20px auto;
  border-radius: 20px;
  box-shadow: 5px 5px 5px #ccc;
  display: flex;
  align-items: center;
  position: relative;
}

.order .img {
  height: 130px;
  overflow: hidden;
  border-radius: 10px;
  margin-left: 10px;
  flex: 1;
}

.order .img image {
  width: 100%;
  height: 100%;
}

.order .info {
  height: 100%;
  margin: 10px;
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.order .info .name {
  width: 80%;
  font-size: 20px;
  color: red;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  /* 指定显示文本的行数 */
  overflow: hidden;
  /* 超出隐藏 */
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
}

.order .info .createtime {
  font-size: 14px;
}

.order .info .ordertime {
  font-size: 14px;
}

.order .info .price {
  color: #f5da43;
}

.order .info .price text {
  font-size: 20px;
}

.order .state {
  position: absolute;
  bottom: 10px;
  right: 10px;
  color: skyblue;
  font-size: 18px;
  letter-spacing: 1px;
}

.order .icon {
  position: absolute;
  top: 10px;
  right: 10px;
}
