page {
  background-color: #f2f2f2ec;
  padding-bottom: 4px;
}

.navImg {
  width: 100%;
}

.navImg image {
  width: 100%;
  height: 350rpx;
}

.content {
  margin: 8px;
  padding-bottom: 4px;
  background-color: #fff;
}

.content .title {
  text-align: center;
  font-size: 32px;
  letter-spacing: 3px;
}

.content .form {
  margin: 4px;
  border: 1px solid black;
  border-radius: 10px;
}

.content .form form view {
  margin: 8px 4px;
}

.content .form form view input {
  border-bottom: 1px solid black;
  padding-left: 4px;
}

.content .form form .border {
  border: 1px solid #ccc;
  border-radius: 10px;
  padding: 4px 0;
}

.content .form form .checkbox {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.content .form form .checkbox label {
  margin-bottom: 8px;
}

.content .form form .checkbox label:nth-last-child(1) {
  margin-bottom: 0;
}

.content .form form .checkbox textarea {
  margin: 8px 4px;
  width: auto;
  height: 100px;
  border: 1px solid #ccc;
  border-radius: 10px;
  padding: 10px;
}

.content .form form text {
  font-size: 20px;
  letter-spacing: 2px;
}

.content .form form .time input:nth-child(1) {
  margin-bottom: 8px;
}

.content .form form .address input:nth-child(1) {
  margin-bottom: 8px;
}

.content .form form .address .border {
  padding-bottom: 10px;
}

.content .form form .dish textarea {
  margin: 8px 4px;
  width: auto;
  height: 100px;
  border: 1px solid #ccc;
  border-radius: 10px;
  padding: 10px;
}
